!!! 5
%html
  %head
    %title= AppConfig.site_title
    = stylesheet_link_tag 'bootstrap.min.css'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    %nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container
        = link_to AppConfig.site_title, root_path, :class => "navbar-brand"
        %p.navbar-text.pull-right
          Logged in as
          = link_to current_user.email, user_path(current_user), :class => 'navbar-link'
          = link_to "(Logout)", logout_path, :method => :delete, :class => 'navbar-link'
!!! 5
%html
  %head
    %title= AppConfig.site_title
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = javascript_include_tag '//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js'
    = csrf_meta_tag
  %body
    %nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container
        = link_to AppConfig.site_title, root_path, :class => "navbar-brand"
        %ul.nav.navbar-nav
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown") Invoices <b class="caret"></b>
            %ul.dropdown-menu
              %li= link_to "All", "#"
              %li= link_to "Active", "#"
              %li= link_to "Sent", "#"
              %li= link_to "Drafts", "#"
              %li.divider
              %li= link_to "Unpaid", "#"
              %li= link_to "Paid", "#"
          %li= link_to "Clients", "#"
          %li= link_to "Companies", "#"
        %p.navbar-text.pull-right
          Logged in as
          = link_to current_user.email, user_path(current_user), :class => 'navbar-link'
          = link_to "(Logout)", logout_path, :method => :delete, :class => 'navbar-link'
    #content.container
      = yield
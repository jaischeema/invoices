    %title= AppConfig.site_title
    = stylesheet_link_tag 'bootstrap.min.css'
    = stylesheet_link_tag 'fonts'
    = stylesheet_link_tag 'login'
    = csrf_meta_tag
  %body#devise
    %header
      .container
        %a#logo(href="/") Invoices
    .container
      - if flash[:alert]
        .col-lg-offset-3.col-lg-6
          .alert.alert-danger= flash[:alert]
      = yield